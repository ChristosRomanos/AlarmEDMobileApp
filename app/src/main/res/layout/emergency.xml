<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C90D0A0A"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:text="Tasks"
        android:textSize="24sp"
        android:textStyle="bold" />

    <GridLayout
        android:layout_width="385dp"
        android:layout_height="558dp"
        android:alignmentMode="alignMargins"
        android:columnCount="2"
        android:padding="8dp"
        android:rowCount="4"
        android:rowOrderPreserved="false">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:orientation="vertical"
            android:background="@android:color/darker_gray"
            android:padding="8dp"
            android:elevation="4dp"
            android:layout_margin="8dp">

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="83dp"
                android:scaleType="fitCenter"
                android:src="@drawable/baseline_calculate_24" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="MATHS"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:orientation="vertical"
            android:background="@android:color/darker_gray"
            android:padding="8dp"
            android:elevation="4dp"
            android:layout_margin="8dp">

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="83dp"
                android:scaleType="fitCenter"
                android:src="@drawable/baseline_memory_24" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="MEMORY"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:orientation="vertical"
            android:background="@android:color/darker_gray"
            android:padding="8dp"
            android:elevation="4dp"
            android:layout_margin="8dp">

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="83dp"
                android:scaleType="fitCenter"
                android:src="@drawable/baseline_memory_24" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="ORDER"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:orientation="vertical"
            android:background="@android:color/darker_gray"
            android:padding="8dp"
            android:elevation="4dp"
            android:layout_margin="8dp">

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="83dp"
                android:scaleType="fitCenter"
                android:src="@drawable/baseline_memory_24" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="REPEAT"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:orientation="vertical"
            android:background="@android:color/darker_gray"
            android:padding="8dp"
            android:elevation="4dp"
            android:layout_margin="8dp">

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="83dp"
                android:scaleType="fitCenter"
                android:src="@drawable/baseline_memory_24" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="BARCODE"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:orientation="vertical"
            android:background="@android:color/darker_gray"
            android:padding="8dp"
            android:elevation="4dp"
            android:layout_margin="8dp">

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="83dp"
                android:scaleType="fitCenter"
                android:src="@drawable/baseline_memory_24" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="SHAKE"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:orientation="vertical"
            android:background="@android:color/darker_gray"
            android:padding="8dp"
            android:elevation="4dp"
            android:layout_margin="8dp">

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="83dp"
                android:scaleType="fitCenter"
                android:src="@drawable/baseline_memory_24" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="REWRITE"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:orientation="vertical"
            android:background="@android:color/darker_gray"
            android:padding="8dp"
            android:elevation="4dp"
            android:layout_margin="8dp">

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="83dp"
                android:scaleType="fitCenter"
                android:src="@drawable/baseline_memory_24" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="MATCH"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>
    </GridLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Way chosen: Randomly"
        android:textSize="16sp"></TextView>

    <TextView
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:text="Amount of tasks needed to be completed: 3"
        android:textSize="16sp"></TextView>
</LinearLayout>
